# Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading mode: simulation or live
TRADING_MODE=simulation

# Enable/disable live trading approval
TRADING_APPROVED=false

# Require manual confirmation for orders
ORDER_CONFIRMATION_REQUIRED=true

# Maximum number of open positions
MAX_OPEN_POSITIONS=5

# Maximum risk per trade as percentage of account
MAX_RISK_PER_TRADE=2.0

# Minimum risk-reward ratio required
MIN_RISK_REWARD_RATIO=3.0

# =============================================================================
# BINANCE API CONFIGURATION (Required for trading)
# =============================================================================

# Your Binance API key
BINANCE_API_KEY=your_api_key_here

# Your Binance API secret
BINANCE_API_SECRET=your_api_secret_here

# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional)
# =============================================================================

# Telegram bot token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat ID for notifications
TELEGRAM_CHAT_ID=your_chat_id_here

# Enable/disable Telegram notifications
TELEGRAM_ENABLED=false

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Debug mode (more verbose logging)
DEBUG_MODE=false

# Environment (development, staging, production)
ENVIRONMENT=development

# Data storage directory
DATA_DIR=/data

# Database file path
DB_PATH=/data/app.db

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================

# Exchange name
EXCHANGE=binance_futures

# WebSocket URL for real-time data
WS_URL=wss://fstream.binance.com/ws

# REST API URL for historical data and orders
REST_URL=https://fapi.binance.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Server port
PORT=8000

# Enable auto-reload for development
RELOAD=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# SIMULATION CONFIGURATION
# =============================================================================

# Simulation initial capital
SIMULATION_INITIAL_CAPITAL=10000.0

# Simulation commission rate
SIMULATION_COMMISSION=0.001

# Simulation slippage rate
SIMULATION_SLIPPAGE=0.0001

# Simulation tick interval (seconds)
SIMULATION_TICK_INTERVAL=5.0

# Simulation strategy evaluation interval (seconds)
SIMULATION_STRATEGY_INTERVAL=60.0

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================

# Default commission rate for backtests
DEFAULT_COMMISSION=0.001

# Default slippage for backtests
DEFAULT_SLIPPAGE=0.0001

# Default initial capital for backtests
DEFAULT_INITIAL_CAPITAL=10000.0

# =============================================================================
# DATA STORAGE CONFIGURATION
# =============================================================================

# Historical data storage format (parquet, csv, json)
DATA_STORAGE_FORMAT=parquet

# Data retention days
DATA_RETENTION_DAYS=365

# Enable data compression
DATA_COMPRESSION=true
